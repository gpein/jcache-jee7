<?xml version="1.0" encoding="UTF-8"?>
<web-fragment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
  http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
              id="jcache" version="3.0">

    <display-name>jcache-jee7</display-name>
    <name>jcache</name>

    <servlet>
        <servlet-name>jcache-management</servlet-name>
        <servlet-class>io.github.gpein.jcache.interfaces.servlet.CacheManagementServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>jcache-management</servlet-name>
        <url-pattern>/jcache</url-pattern>
    </servlet-mapping>

</web-fragment>